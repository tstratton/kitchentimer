<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_height="fill_parent"
	android:gravity="center"
	android:layout_width="wrap_content"
	android:layout_gravity="center">
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center"
			android:id="@+id/llTimer0">
			<TextView
				android:id="@+id/tvTimer0_label"
				android:layout_height="wrap_content"
				android:layout_marginBottom="2dp"
				android:textStyle="bold"
				android:textColor="@color/white"
				android:shadowColor="@color/white"
				android:shadowRadius="3"
				android:ellipsize="marquee"
				android:maxLines="1"
				android:paddingLeft="6dp"
				android:paddingRight="6dp"
				android:layout_width="fill_parent"
				android:gravity="center" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:typeface="sans"
				android:textStyle="bold"
				android:layout_gravity="center"
				android:id="@+id/tvTimer0"
				android:text="@string/sixzeros"
				android:background="@drawable/background_shape"
				android:textSize="66dp"
				android:paddingLeft="7dp"
				android:paddingRight="7dp">
			</TextView>
		</LinearLayout>
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_marginTop="4dp">
			<LinearLayout
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_weight="1"
				android:gravity="left"
				android:id="@+id/llTimer1"
				android:layout_width="0dp">
				<TextView
					android:id="@+id/tvTimer1_label"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textColor="@color/white"
					android:shadowColor="@color/white"
					android:shadowRadius="3"
					android:layout_marginBottom="2dp"
					android:ellipsize="marquee"
					android:maxLines="1"
					android:paddingRight="10dp"
					android:layout_width="fill_parent"
					android:gravity="left" />
				<TextView
					android:layout_height="wrap_content"
					android:typeface="sans"
					android:textStyle="bold"
					android:id="@+id/tvTimer1"
					android:text="@string/fourzeros"
					android:background="@drawable/background_shape"
					android:ellipsize="marquee"
					android:gravity="center"
					android:layout_marginRight="4dp"
					android:layout_width="wrap_content"
					android:textSize="47dp">
				</TextView>
			</LinearLayout>
			<LinearLayout
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_weight="1"
				android:gravity="right"
				android:id="@+id/llTimer2"
				android:layout_width="0dp">
				<TextView
					android:id="@+id/tvTimer2_label"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:textColor="@color/white"
					android:shadowColor="@color/white"
					android:shadowRadius="3"
					android:layout_marginBottom="2dp"
					android:ellipsize="marquee"
					android:maxLines="1"
					android:paddingLeft="10dp"
					android:layout_width="fill_parent"
					android:gravity="right" />
				<TextView
					android:layout_height="wrap_content"
					android:typeface="sans"
					android:textStyle="bold"
					android:id="@+id/tvTimer2"
					android:text="@string/fourzeros"
					android:background="@drawable/background_shape"
					android:ellipsize="marquee"
					android:gravity="center"
					android:layout_marginLeft="4dp"
					android:layout_width="wrap_content"
					android:textSize="47dp">
				</TextView>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_width="fill_parent">
		<LinearLayout
			android:orientation="horizontal"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:layout_marginTop="8dp">

			<com.leinardi.kitchentimer.customviews.NumberPicker
				android:id="@+id/npHours"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:layout_weight="1" />
			<com.leinardi.kitchentimer.customviews.NumberPicker
				android:id="@+id/npMinutes"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:layout_weight="1" />
			<com.leinardi.kitchentimer.customviews.NumberPicker
				android:id="@+id/npSeconds"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:layout_weight="1" />

		</LinearLayout>
		<Button
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_width="fill_parent"
			android:id="@+id/btnTimer0"
			android:text="@string/start"
			android:textSize="32dp">
		</Button>
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent">
			<Button
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:layout_weight="1"
				android:id="@+id/btnTimer1"
				android:text="@string/start"
				android:textSize="24dp"></Button>
			<Button
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_width="fill_parent"
				android:id="@+id/btnTimer2"
				android:text="@string/start"
				android:textSize="24dp"></Button>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
